// --- Gate for Standard Crew (5 crew) ---
NeedsCrewMinusNone
{
	Type = MultiToggle
	Toggles = [NeedsCrewMinusOne, NeedsCrewMinusTwo, NeedsCrewMinusThree, NeedsCrewMinusFour, NeedsCrewMinusFive]
	Mode = Any
	Invert = True
}

// --- Crew Configurations ---
PartCrewMinusNone
{
	Type = PartCrew
	Crew = 5
	DefaultPriority = &/PRIORITIES/ControlRoom_Crew
	PrerequisitesBeforeCrewing = [PowerToggle, NeedsCrewMinusNone]
	HighPriorityPrerequisites = [BatteryStorage]
