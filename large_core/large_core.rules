Part : <./Data/ships/terran/base_part_terran.rules>/Part
{
	NameKey = "Parts/Aredja2AILargeCore"
	IconNameKey = "Parts/Aredja2AILargeCoreIcon"
	DescriptionKey = "Parts/Aredja2AILargeCoreDesc"
	ID = aredja.parts.ai_large_core
	EditorGroup = "Crew"
	Resources
	[
		[steel, 160]
		[coil2, 70]
		[processor, 10]
		[diamond, 6]
	]
	Size = [4, 4]
	MaxHealth = 16000
	TypeCategories = [command, uses_power, is_crewed]
	ReceivableBuffs : ^/0/ReceivableBuffs []
	IsRotateable = true
	IsWalled = true
	IsSelfDestructible = true
	GeneratorRequiresDoor = false
	ForceManhattanPathInPart = true
	AllowedDoorLocations
	[
		[-1, 1]
		[-1, 2]
		[0, 4]
		[1, 4]
		[2, 4]
		[3, 4]
		[4, 1]
		[4, 2]
	]
	EditorIcon
	{
		Texture
		{
			File = "icon.png"
			SampleMode = Linear
		}
		Size = [64, 64]
	}
	Components : ^/0/Components
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle, BatteryStorage, PartCrew]
			Mode = All
		}

		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
			RequiresCommand = false
		}

		CommandConsumer
		{
			Type = CommandConsumer
			OperationalToggle = PowerToggle
			CommandPoints = 64
		}

		BatteryStorage
		{
			Type = ResourceStorage
			ResourceType = battery
			MaxResources = 8000
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/PowerDeliver
		}

		BatteryConsumer
		{
			Type = ResourceConsumer
			ResourceType = battery
			Storage = BatteryStorage
			DefaultPriority = &/PRIORITIES/ControlRoom_Supply
			ResupplyThreshold = 1000
			OperationalToggle = PowerToggle
		}

		PowerDrain
		{
			Type = ResourceConverter
			OperationalToggle = IsOperational
			FromStorage = BatteryStorage
			FromQuantity = 2000
			MinFromQuantityForConversion = 1
			Interval = 30
		}

		BuffProvider
		{
			Type = AreaBuffProvider
			BuffType = Aredja2AITerminal
			BuffArea = [-6, -6, 16, 16]
			BuffAmount = 2
			MaxBuffPerPart = 2
			TotalBuffCap = 32
			Criteria
			{
				Category = is_crewed
			}
			OperationalToggle = IsOperational
			ChainsFromBuffType = Aredja2AITerminal
		}

		CrewLocation1
		{
			Type = CrewLocation
			Location = [1, 1]
			Rotation = -45d
		}
		CrewLocation2
		{
			Type = CrewLocation
			Location = [3, 1]
			Rotation = 45d
		}
		CrewLocation3
		{
			Type = CrewLocation
			Location = [1.2, 1.8]
			Rotation = 90d
		}
		CrewLocation4
		{
			Type = CrewLocation
			Location = [2.8, 1.8]
			Rotation = -90d
		}
		CrewLocation5
		{
			Type = CrewLocation
			Location = [2, 2.8]
		}
		CrewLocation6
		{
			Type = CrewLocation
			Location = [1, 3]
			Rotation = -135d
		}
		CrewLocation7
		{
			Type = CrewLocation
			Location = [2, 3]
			Rotation = 180d
		}
		CrewLocation8
		{
			Type = CrewLocation
			Location = [3, 3]
			Rotation = 135d
		}
		
		PartCrew
		{
			Type = PartCrew
			Crew = 8
			DefaultPriority = &/PRIORITIES/ControlRoom_Crew
			PrerequisitesBeforeCrewing = [PowerToggle]
			HighPriorityPrerequisites = [BatteryStorage]
			CrewDestinations
			[
				&../../CrewLocation1/Location
				&../../CrewLocation2/Location
				&../../CrewLocation3/Location
				&../../CrewLocation4/Location
				&../../CrewLocation5/Location
				&../../CrewLocation6/Location
				&../../CrewLocation7/Location
				&../../CrewLocation8/Location
			]
			CrewLocations
			[
				CrewLocation1
				CrewLocation2
				CrewLocation3
				CrewLocation4
				CrewLocation5
				CrewLocation6
				CrewLocation7
				CrewLocation8
			]
		}

		Graphics
		{
			Type = Graphics
			Location = [2, 2]
			OperationalToggle = IsOperational
			Floor
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "floor.png"
						Size = [4, 4]
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						File = "floor_on.png"
						NormalsFile = "floor_normal.png"
						Size = [4, 4]
					}
				]
			}
			NonOperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						File = "floor_off.png"
						NormalsFile = "floor_normal.png"
						Size = [4, 4]
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "./Data/ships/terran/control_room_large/walls.png"
						Size = [4, 4]
					}
				]
			}
			Roof
			{
				Layer = "roofs"
				DamageLevels
				[
					{
						File = "roof.png"
						NormalsFile = "roof_normal.png"
						Size = [4, 4]
					}
				]
			}
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/BigPartDestroyed
			Location = [2, 2]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [4, 4]
		}

		BatterySprites
		{
			Type = ResourceSprites
			Location = [2, 2]
			ResourceStorage = BatteryStorage
			Layer = "doodads_high"
			ResourceLevels
			[
				{
					File = "batteries1.png"
					Size = [4, 4]
				}
				{
					File = "batteries2.png"
					Size = [4, 4]
				}
				{
					File = "batteries3.png"
					Size = [4, 4]
				}
				{
					File = "batteries4.png"
					Size = [4, 4]
				}
			]
		}
	}

	Stats
	{
		PowerUsageContinuousMinutes = (&~/Part/Components/PowerDrain/FromQuantity) / (&~/Part/Components/PowerDrain/Interval) / 1000 * 60
		PowerCapacity = (&~/Part/Components/BatteryStorage/MaxResources) / 1000
		RecPower = (&PowerUsageContinuousMinutes) / 60
		RecCrew = (&RecPower) * 4
		BuffRadius = 5
		CrewRequired = &~/Part/Components/PartCrew/Crew
		MaxBuffPerPart = &~/Part/Components/BuffProvider/MaxBuffPerPart
		TotalMaxBuff = &~/Part/Components/BuffProvider/TotalBuffCap
		Aredja2OperatingPower = &~/Part/Components/BuffProvider/BuffAmount
	}
}
