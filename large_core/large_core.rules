HEAT_TO_RESOURCE = &<./Data/statuses/heat/heat.rules>/STATUS_TO_RESOURCE_RATIO
HEAT_TO_STATUS = &<./Data/statuses/heat/heat.rules>/RESOURCE_TO_STATUS_RATIO

Part : <./Data/ships/terran/base_part_terran_overclock.rules>/Part
{
	NameKey = "Parts/Aredja2AILargeCore"
	IconNameKey = "Parts/Aredja2AILargeCoreIcon"
	DescriptionKey = "Parts/Aredja2AILargeCoreDesc"
	ID = aredja.parts.ai_large_core
	EditorGroup = "Crew"
	Resources
	[
		[steel, 160]
		[coil2, 70]
		[processor, 10]
		[diamond, 6]
	]
	Size = [4, 4]
	MaxHealth = 16000
	TypeCategories = [command, uses_power, is_crewed]
    ReceivableBuffs : ^/0/ReceivableBuffs [ Overclock ]
	IsRotateable = true
	IsWalled = true
	IsSelfDestructible = true
	GeneratorRequiresDoor = false
	ForceManhattanPathInPart = true
	AllowedDoorLocations
	[
		[-1, 1]
		[-1, 2]
		[0, 4]
		[1, 4]
		[2, 4]
		[3, 4]
		[4, 1]
		[4, 2]
	]
	EditorIcon
	{
		Texture
		{
			File = "icon.png"
			SampleMode = Linear
		}
		Size = [64, 64]
	}
	Components : ^/0/Components
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle, BatteryStorage, PartCrew]
			Mode = All
		}

        IsOperationalNonOverclocked
        {
            Type = MultiToggle
            Toggles = [ IsOperational, { Toggle=OverclockModeToggle; Invert=true } ]
            Mode = All
        }
        IsOperationalOverclocked
        {
            Type = MultiToggle
            Toggles = [ IsOperational, OverclockModeToggle ]
            Mode = All
        }

		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
			RequiresCommand = false
		}

		CommandConsumer
		{
			Type = CommandConsumer
			OperationalToggle = PowerToggle
			CommandPoints = 64
		}

		BatteryStorage
		{
			Type = ResourceStorage
			ResourceType = battery
			MaxResources = 8000
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/PowerDeliver
		}

		BatteryConsumer
		{
			Type = ResourceConsumer
			ResourceType = battery
			Storage = BatteryStorage
			DefaultPriority = &/PRIORITIES/ControlRoom_Supply
			ResupplyThreshold = 1000
			OperationalToggle = PowerToggle
		}

		PowerDrain
		{
			Type = ResourceConverter
			OperationalToggle = IsOperational
			FromStorage = BatteryStorage
			FromQuantity = 2000
			MinFromQuantityForConversion = 1
			Interval = 30
		}

        BuffProvider
        {
            Type = AreaBuffProvider
            BuffType = Aredja2AITerminal
            BuffArea = [-6, -6, 16, 16]
            BuffAmount = 2
            MaxBuffPerPart = 2
            TotalBuffCap = 32
            Criteria { Category = is_crewed }
            OperationalToggle = IsOperationalNonOverclocked
            ChainsFromBuffType = Aredja2AITerminal
        }

        Overclock_BuffProvider : BuffProvider
        {
            BuffArea = [-9, -9, 22, 22]
            MaxBuffPerPart = 4
            TotalBuffCap = 48
            OperationalToggle = IsOperationalOverclocked
        }

		CrewLocation1
		{
			Type = CrewLocation
			Location = [1, 1]
			Rotation = -45d
		}
		CrewLocation2
		{
			Type = CrewLocation
			Location = [3, 1]
			Rotation = 45d
		}
		CrewLocation3
		{
			Type = CrewLocation
			Location = [1.2, 1.8]
			Rotation = 90d
		}
		CrewLocation4
		{
			Type = CrewLocation
			Location = [2.8, 1.8]
			Rotation = -90d
		}
		CrewLocation5
		{
			Type = CrewLocation
			Location = [2, 2.8]
		}
		CrewLocation6
		{
			Type = CrewLocation
			Location = [1, 3]
			Rotation = -135d
		}
		CrewLocation7
		{
			Type = CrewLocation
			Location = [2, 3]
			Rotation = 180d
		}
		CrewLocation8
		{
			Type = CrewLocation
			Location = [3, 3]
			Rotation = 135d
		}
		
		PartCrew
		{
			Type = PartCrew
			Crew = 8
			DefaultPriority = &/PRIORITIES/ControlRoom_Crew
			PrerequisitesBeforeCrewing = [PowerToggle]
			HighPriorityPrerequisites = [BatteryStorage]
			CrewDestinations
			[
				&../../CrewLocation1/Location
				&../../CrewLocation2/Location
				&../../CrewLocation3/Location
				&../../CrewLocation4/Location
				&../../CrewLocation5/Location
				&../../CrewLocation6/Location
				&../../CrewLocation7/Location
				&../../CrewLocation8/Location
			]
			CrewLocations
			[
				CrewLocation1
				CrewLocation2
				CrewLocation3
				CrewLocation4
				CrewLocation5
				CrewLocation6
				CrewLocation7
				CrewLocation8
			]
		}

		Graphics
		{
			Type = Graphics
			Location = [2, 2]
			OperationalToggle = IsOperational
			Floor
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "floor.png"
						Size = [4, 4]
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						File = "floor_on.png"
						NormalsFile = "floor_normal.png"
						Size = [4, 4]
					}
				]
			}
			NonOperationalDoodad
			{
				Layer = "doodads_low"
				DamageLevels
				[
					{
						File = "floor_off.png"
						NormalsFile = "floor_normal.png"
						Size = [4, 4]
					}
				]
			}
			Walls
			{
				Layer = "walls"
				DamageLevels
				[
					{
						File = "./Data/ships/terran/control_room_large/walls.png"
						Size = [4, 4]
					}
				]
			}
			Roof
			{
				Layer = "roofs"
				DamageLevels
				[
					{
						File = "roof.png"
						NormalsFile = "roof_normal.png"
						Size = [4, 4]
					}
				]
			}
		}

		DestroyedEffects
		{
			Type = DeathEffects
			MediaEffects = &/COMMON_EFFECTS/BigPartDestroyed
			Location = [2, 2]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [4, 4]
		}

        // Overclock heat scaffolding for non-weapon part
        

        // Overclock state value is used by tooltips and optional expressions
        OverclockStateValue
        {
            Type = ToggleValueSelector
            Toggle = OverclockModeToggle
            ToggleOffValue = Zero
            ToggleOnValue = One
        }
        Zero { Type = StaticValue; Value = 0; }
        One { Type = StaticValue; Value = 1; }

        Overclock_ConstantHeatProducer
        {
            Type = ResourceConverter
            OperationalToggle = IsOperationalOverclocked
            HEAT_PER_INTERVAL = ceil((1600) * (&Interval))
            ToQuantity = (&HEAT_PER_INTERVAL) * (&~/HEAT_TO_RESOURCE)
            ToStorage = &~/Part/^/0/HEAT_TARGET_STORAGE
            Interval = 0.5
        }

        PeakHeatGenerationValue
        {
            Type = StaticValue
            Value = 1600 // simple constant heat stat display
        }
        HeatGenerationStatProvider
        {
            Type = StatProvider
            Stat = HeatGeneration
            OperationalToggle = OverclockModeToggle
            ValueFrom = PeakHeatGenerationValue
        }

		BatterySprites
		{
			Type = ResourceSprites
			Location = [2, 2]
			ResourceStorage = BatteryStorage
			Layer = "doodads_high"
			ResourceLevels
			[
				{
					File = "batteries1.png"
					Size = [4, 4]
				}
				{
					File = "batteries2.png"
					Size = [4, 4]
				}
				{
					File = "batteries3.png"
					Size = [4, 4]
				}
				{
					File = "batteries4.png"
					Size = [4, 4]
				}
			]
		}

        // Thermal ports for heat pipes (4x4 perimeter)
        Port_Thermal_Left0   : ~/Part/^/0/BASE_THERMAL_PORT { Location = [0, 0] Direction = Left }
        Port_Thermal_Left1   : Port_Thermal_Left0 { Location = [0, 1] }
        Port_Thermal_Left2   : Port_Thermal_Left0 { Location = [0, 2] }
        Port_Thermal_Left3   : Port_Thermal_Left0 { Location = [0, 3] }

        Port_Thermal_Right0  : Port_Thermal_Left0 { Location = [3, 0] Direction = Right }
        Port_Thermal_Right1  : Port_Thermal_Right0 { Location = [3, 1] }
        Port_Thermal_Right2  : Port_Thermal_Right0 { Location = [3, 2] }
        Port_Thermal_Right3  : Port_Thermal_Right0 { Location = [3, 3] }

        Port_Thermal_Up0     : Port_Thermal_Left0 { Location = [0, 0] Direction = Up }
        Port_Thermal_Up1     : Port_Thermal_Up0 { Location = [1, 0] }
        Port_Thermal_Up2     : Port_Thermal_Up0 { Location = [2, 0] }
        Port_Thermal_Up3     : Port_Thermal_Up0 { Location = [3, 0] }

        Port_Thermal_Down0   : Port_Thermal_Left0 { Location = [0, 3] Direction = Down }
        Port_Thermal_Down1   : Port_Thermal_Down0 { Location = [1, 3] }
        Port_Thermal_Down2   : Port_Thermal_Down0 { Location = [2, 3] }
        Port_Thermal_Down3   : Port_Thermal_Down0 { Location = [3, 3] }
	}

	Stats
	{
		PowerUsageContinuousMinutes = (&~/Part/Components/PowerDrain/FromQuantity) / (&~/Part/Components/PowerDrain/Interval) / 1000 * 60
		PowerCapacity = (&~/Part/Components/BatteryStorage/MaxResources) / 1000
		RecPower = (&PowerUsageContinuousMinutes) / 60
		RecCrew = (&RecPower) * 4
		BuffRadius = 5
		CrewRequired = &~/Part/Components/PartCrew/Crew
		MaxBuffPerPart = &~/Part/Components/BuffProvider/MaxBuffPerPart
		TotalMaxBuff = &~/Part/Components/BuffProvider/TotalBuffCap
		Aredja2OperatingPower = &~/Part/Components/BuffProvider/BuffAmount
	}

	SecondaryToolTip
	{
		TitleKey = "StatCategories/Overclocked"
		DescriptionKey = "Parts/Aredja2AILargeCoreOverclockDesc"
		StatsByCategory
		[
			{
				NameKey = "StatCategories/Overclocked"
				Stats
				{
					BuffWidth = &~/Part/Components/Overclock_BuffProvider/BuffArea/2
					BuffHeight = &~/Part/Components/Overclock_BuffProvider/BuffArea/3
					MaxBuffPerPart = &~/Part/Components/Overclock_BuffProvider/MaxBuffPerPart
					TotalBuffCap = &~/Part/Components/Overclock_BuffProvider/TotalBuffCap
					HeatGeneration = 1600
				}
			}
		]
	}
}
