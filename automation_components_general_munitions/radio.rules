// Radio Operator (General Munitions) Automation Component
// Allows the radio operator to work with AI cores

PartCrew
{
	Type = MultiToggle
	Toggles = [PartCrewMinusNone, PartCrewMinusOne]
	Mode = Any
}

NeedsCrewMinusNone
{
	Type = MultiToggle
	Toggles = [PartCrewMinusOne]
	Mode = Any
	Invert = True
}

// Requires 1 crew when no AI buff
PartCrewMinusNone
{
	Type = PartCrew
	Crew = 1
	DefaultPriority = &/PRIORITIES/Weapon_Crew
	PrerequisitesBeforeCrewing = [PowerToggle, NeedsCrewMinusNone]
	CrewDestinations
	[
		&../../CrewLocation/Location
	]
	CrewLocations
	[
		CrewLocation
	]
}

// No crew needed when one or more AI buffs present
PartCrewMinusOne
{
	Type = BuffToggle
	BuffType = Aredja2AITerminal
	MinBuffValue = 1
}

// Crew location from original part definition
CrewLocation { Type = CrewLocation; Location = [1, 1.27] } 