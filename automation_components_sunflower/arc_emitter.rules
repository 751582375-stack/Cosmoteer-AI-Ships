// Arc Emitter (Sunflower) Automation Component
// Allows the arc emitter to work with AI cores

PartCrew
{
	Type = MultiToggle
	Toggles = [PartCrewMinusNone, PartCrewMinusFour]
	Mode = Any
}

NeedsCrewMinusNone
{
	Type = MultiToggle
	Toggles = [PartCrewMinusFour]
	Mode = Any
	Invert = True
}

// Requires 4 crew when no AI buff
PartCrewMinusNone
{
	Type = PartCrew
	Crew = 4
	DefaultPriority = &/PRIORITIES/Weapon_Crew
	PrerequisitesBeforeCrewing = [PowerToggle, NeedsCrewMinusNone]
	HighPriorityPrerequisites = []
	CrewDestinations
	[
		[1, 1]
		[2, 1]
		[1, 2]
		[2, 2]
	]
	CrewLocations
	[
		CrewLocation1
		CrewLocation2
		CrewLocation3
		CrewLocation4
	]
}

// No crew needed when AI buff >= 4
PartCrewMinusFour
{
	Type = BuffToggle
	BuffType = Aredja2AITerminal
	MinBuffValue = 4
}

// Crew locations from original part
CrewLocation1 { Type = CrewLocation; Location = [1.5, 1.5] }
CrewLocation2 { Type = CrewLocation; Location = [1.5, 2.5] }
CrewLocation3 { Type = CrewLocation; Location = [2.5, 1.5] }
CrewLocation4 { Type = CrewLocation; Location = [2.5, 2.5] } 