// ST-AFA Federation: Phaserbank Controller Automation Component
// Allows the fed_phaserbank_controller part to work with AI cores

PartCrew
{
	Type = MultiToggle
	Toggles = [PartCrewMinusNone, NeedsCrewMinusOne]
	Mode = Any
}

NeedsCrewMinusNone
{
	Type = MultiToggle
	Toggles = [NeedsCrewMinusOne]
	Mode = Any
	Invert = True
}

// Requires 1 crew when no AI buff
PartCrewMinusNone
{
	Type = PartCrew
	Crew = 1
	DefaultPriority = &/PRIORITIES/Weapon_Crew
	PrerequisitesBeforeCrewing = [PowerToggle, NeedsCrewMinusNone]
	HighPriorityPrerequisites = [BatteryStorage]
	CrewDestinations
	[
		[0.5, 0.6]
	]
	CrewLocations
	[
		CrewLocation1
	]
}

// No crew needed when AI buff >= 1
NeedsCrewMinusOne
{
	Type = BuffToggle
	BuffType = Aredja2AITerminal
	MinBuffValue = 1
}

// Crew location from original part
CrewLocation1 { Type = CrewLocation; Location = [0.5, 0.6] } 