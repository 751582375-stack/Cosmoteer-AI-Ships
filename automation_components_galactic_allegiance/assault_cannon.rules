// Assault Cannon (Galactic Allegiance) Automation Component
// Allows the assault cannon to work with AI cores

PartCrew
{
	Type = MultiToggle
	Toggles = [PartCrewStandard, PartCrewAIControlled]
	Mode = Any
}

NeedsCrewStandard
{
	Type = MultiToggle
	Toggles = [PartCrewAIControlled]
	Mode = Any
	Invert = True
}

// Standard crew component - requires 1 crew when no AI buff or AI buff is not sufficient
PartCrewStandard
{
	Type = PartCrew
	Crew = 1
	DefaultPriority = &/PRIORITIES/Weapon_Crew
	PrerequisitesBeforeCrewing = [PowerToggle, NeedsCrewStandard]
	HighPriorityPrerequisites = [BatteryStorage]
	CrewDestinations
	[
		[1, 4.5]
	]
	CrewLocations
	[
		CrewLocation1
	]
}

// No crew needed when AI buff of 1 or higher is present
PartCrewAIControlled
{
	Type = BuffToggle
	BuffType = Aredja2AITerminal
	MinBuffValue = 1
}

// Crew locations
CrewLocation1 { Type = CrewLocation; Location = [1, 4.5] } 