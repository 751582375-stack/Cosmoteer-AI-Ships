// Galactic Allegiance Medium Rocket Turret Automation Component
// Allows the rocket_turret_medium part to work with AI cores

PartCrew
{
    Type = MultiToggle
    Toggles = [PartCrewMinusNone, PartCrewMinusThree]
    Mode = Any
}

NeedsCrewMinusNone
{
    Type = MultiToggle
    Toggles = [PartCrewMinusThree]
    Mode = Any
    Invert = True
}

// Requires 3 crew when no AI buff
PartCrewMinusNone
{
    Type = PartCrew
    Crew = 3
    DefaultPriority = &/PRIORITIES/Weapon_Crew
    PrerequisitesBeforeCrewing = [PowerToggle, NeedsCrewMinusNone]
    HighPriorityPrerequisites = [LoadedRockets]
    CrewDestinations
    [
        [1.5, 2.5]
        [2.5, 2.5]
        [3.5, 2.5]
    ]
    CrewLocations
    [
        CrewLocation1
        CrewLocation2
        CrewLocation3
    ]
}

// No crew needed when AI buff >=3
PartCrewMinusThree
{
    Type = BuffToggle
    BuffType = Aredja2AITerminal
    MinBuffValue = 3
}

// Crew locations from original part
CrewLocation1 { Type = CrewLocation; Location = [1.5, 2.5] }
CrewLocation2 { Type = CrewLocation; Location = [2.5, 2.5] }
CrewLocation3 { Type = CrewLocation; Location = [3.5, 2.5] } 